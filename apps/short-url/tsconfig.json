{
  "include": [
    "app/**/*",
    "server/**/*",
    "rsbuild.config.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "@rsbuild/core/types"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@edgeapps/core/*": [
        "../../packages/core/src/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
